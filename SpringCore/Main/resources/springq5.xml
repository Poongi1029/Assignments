<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <bean id="studentRequired" class="springcoreq5.Student">
        <property name="name" value="FSS"/>
        
    </bean>

    <bean id="studentResource" class="springcoreq5.Student">
        <property name="name" value="littleworld"/>
        <property name="age" value="15"/>
    </bean>
    <bean id="school" class = "springcoreq5.School">
        <property name="name" value="BHS"/>
        <property name="TotalStudent" value="200"/>

    </bean>

    <bean id="school1" class = "springcoreq5.School">
        <property name="name" value="IGHSS"/>
        <property name="TotalStudent" value="200"/>

    </bean>
    <bean id="school2" class = "springcoreq5.School">
        <property name="name" value="BOFS"/>
        <property name="TotalStudent" value="500"/>

    </bean>

    <bean id="school3" class = "springcoreq5.School">
        <property name="name" value="WS"/>
        <property name="TotalStudent" value="250"/>

    </bean>

    <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"/>
    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>


</beans>